<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ingredient_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/colorPrimaryLight"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ingredient_card_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Ingredient" />

        <TextView
            android:id="@+id/ingredient_card_quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ingredient_card_name_text_view"
            android:layout_marginStart="5dp"
            android:textSize="20sp"
            tools:text="Quantity" />

        <TextView
            android:id="@+id/ingredient_card_measure_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ingredient_card_name_text_view"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/ingredient_card_quantity_text_view"
            android:textSize="20sp"
            tools:text="Measure" />
    </RelativeLayout>


</android.support.v7.widget.CardView>